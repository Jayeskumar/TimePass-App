<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtSpace1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtMonthOfBirth"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Pick month of birth"
                android:layout_gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <Spinner
                android:id="@+id/sprSpinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imgMonthOfBirth"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/questionmark"
                android:contentDescription="TODO"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtSpace2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtCatsOrDogs"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Cats or Dogs"
                android:layout_gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <ToggleButton
                android:id="@+id/tbnToggleButton1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:checked="true"
                android:textOn="Cat"
                android:textOff="Dog"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imgCatsOrDogs"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="TODO" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtSpace3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtPickANumber"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Pick a number 1 - 9"
                android:layout_gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtNumber"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Number"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edtNumber"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgPickANumber"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="TODO" />
        </TableRow>

    </TableLayout>

</ScrollView>